<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".acercade">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="@string/acerca_de"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="56sp"
        app:layout_constraintBottom_toTopOf="@+id/txtHechopor"
        app:layout_constraintEnd_toEndOf="@+id/txtHechopor"
        app:layout_constraintStart_toStartOf="@+id/txtHechopor"
        app:layout_constraintTop_toBottomOf="@+id/btnAtras" />

    <ImageButton
        android:id="@+id/btnAtras"
        android:layout_width="38dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chevron_left_black_24dp" />

    <TextView
        android:id="@+id/txtHechopor"
        android:layout_width="238dp"
        android:layout_height="0dp"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="447dp"
        android:text="@string/security_home_v1_0_beta_desarrollado_por_el_equipo_2_security_home_2021_2022"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>